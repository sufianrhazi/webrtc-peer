{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",

    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {},

    "isolatedModules": true,
    "useDefineForClassFields": false,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "newLine": "lf",

    "rootDir": "./",
    "outDir": "./build",

    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
